<!DOCTYPE html>
<html>
<head>
  <title>Vigillianger</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= favicon_link_tag asset_path('logos/favicon.ico') %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<%= render "layouts/notice_bar.html.erb" %>
<% if user_signed_in? %>
  <div>
    <%= render "layouts/side_menu.html.erb", resource: get_menu_data %>
  </div>
<% end %>
<div class="container text-center">
  <%= yield %>
</div>
</body>
</html>
