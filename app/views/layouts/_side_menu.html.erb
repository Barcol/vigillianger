<!--It is not a menu and it is definitely not a side menu... YET!-->
<div class="pt-4">
  <%= link_to image_tag("logos/logo.png"), root_path %>
</div>
<div class="container-fluid mt-4">
  <% resource.each do |res| %>
    <div class="row menu-row">
      <%= link_to res[:name], shop_list_path(res[:id]), class: "btn btn-primary menu-element" %>
    </div>
  <% end %>
  <div class="row menu-row">
    <%= link_to "Raport", report_path, class: "btn btn-success btn-logout menu-element" %>
  </div>
  <div class="row menu-row">
    <%= link_to "Wyloguj", destroy_user_session_path, class: "btn btn-danger btn-logout, menu-element", method: :delete %>
  </div>
</div>
