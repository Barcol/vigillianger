<h2 class="mt-3">Edycja uczestnika</h2>
<div class="container">
  <div class="card mt-4 pt-3">
    <h3 class="card-title">Dane uczestnika</h3>
    <div class="card-body">
      <%= bootstrap_form_with(model: @party_guest) do |form| %>
        <div class="row">
          <div class="col-lg-4">
          </div>
          <div class="col-lg-4 text-center">
            <%= form.text_field :name %>
            <%= form.submit %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
