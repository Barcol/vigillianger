<% @party_guest.errors.full_messages.each do |msg| %>
  <p class="alert alert-danger text-center"><%= msg %></p>
<% end %>

<h2 class="mt-3">Dodawanie uczestnika</h2>
<div class="container">
  <div class="card mt-4 pt-3">
    <h3 class="card-title">Dane uczestnika</h3>
    <div class="card-body">
      <%= bootstrap_form_with(model: @party_guest, local: true) do |form| %>
        <div class="row">
          <div class="col-lg-4">
          </div>
          <div class="col-lg-4 text-center">
            <%= form.text_field :name %>
            <%= form.email_field :email %>

            <%= form.submit %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
