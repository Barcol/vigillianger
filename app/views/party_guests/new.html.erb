<h2 class="mt-3">Dodawanie uczestnika</h2>

<% @party_guest.errors.full_messages.each do |msg| %>
  <p class="alert alert-danger text-center"><%= msg %></p>
<% end %>

<div class="container">
  <div class="card mt-4 pt-3">
    <h3 class="card-title">Dane uczestnika</h3>
    <div class="card-body">
      <%= simple_form_for @party_guest do |f| %>
        <div class="form-inputs">
            <%= f.input :name %>
            <%= f.input :email %>
            <%= f.input :product_type_ids,
                        collection: permitted_types,
                        input_html: { class: "select2", multiple: true } %>

            <%= f.submit %>
        </div>
      <% end %>
    </div>
  </div>
</div>
