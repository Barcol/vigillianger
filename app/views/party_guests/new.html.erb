<h2 class="mt-3">Dodawanie uczestnika</h2>

<% @party_guest.errors.full_messages.each do |msg| %>
  <p class="alert alert-danger text-center"><%= msg %></p>
<% end %>

<div class="container">
  <div class="card mt-4 pt-3">
    <h3 class="card-title">Dane uczestnika</h3>
    <div class="card-body">
      <%= simple_form_for @party_guest do |form| %>
        <div class="row justify-content-center">
          <div class="col-lg-4">
            <%= form.input :name %>
            <%= form.input :email %>
            <%= form.input :product_type_ids, collection: permitted_types %>

            <%= form.submit %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
