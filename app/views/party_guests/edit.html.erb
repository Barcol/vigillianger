<% @party_guest.errors.full_messages.each do |msg| %>
  <p class="alert alert-danger text-center"><%= msg %></p>
<% end %>

<h2 class="mt-3">Edycja uczestnika</h2>
<div class="container">
  <div class="card mt-4 pt-3">
    <h3 class="card-title">Dane uczestnika</h3>
    <div class="card-body">
      <%= simple_form_for(model: @party_guest, local: true) do |form| %>
        <div class="row">
          <div class="col-lg-4">
          </div>
          <div class="col-lg-4 text-center">
            <%= form.text_field :name %>
            <% @types.each do |type| %>
              <p>
                <%= check_box_tag 'type_ids[]', type.id, @party_guest.types.any? { |pg_type| pg_type.name == type.name } %>
                <%= h type.name %>
              </p>
            <% end %><br><br>
            <%= form.submit %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
